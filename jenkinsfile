// basic -1
pipeline {
    agent { label 'slave2' }
    stages {
        stage('build') {
            steps {
                echo "this is build stage"
                sh 'ls'
                sh 'mvn -version'
                sh 'mvn clean package -DskipTests'
            }
        }
        stage('test') {
            steps {
                echo "this is test stage"
                sh 'mvn test'
            }
        }
        stage('run') {
            steps {
                echo "this is run stage"
                sh 'java -jar target/hello-demo-*.jar'
            }
        }
    }
}
